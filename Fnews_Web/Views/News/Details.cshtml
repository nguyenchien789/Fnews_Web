@model Fnews_Web.Models.News

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

    <div>
        <h4>News</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NewsTitle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NewsTitle)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NewsContent)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NewsContent)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DayOfPost)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DayOfPost)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsActive)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LinkImage)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LinkImage)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Channel)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Channel.ChannelName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NewsTag)
            </dt>
            <dd class="col-sm-10">
                @foreach (var tag in Model.NewsTag)
                {
                    @tag.Tag.TagName <br />
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Comment)
            </dt>
            <dd class="col-sm-10">
                @foreach (var cmt in Model.Comment)
                {
                    @cmt.User.Email @:- @cmt.Comment <br />
                }
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.NewsId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
